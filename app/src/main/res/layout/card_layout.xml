<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|top"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


                <ImageView
                    android:id="@+id/hourIs"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/days_format"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/minuteIs"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/days_format"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/hourIs" />

            <ImageView
                android:id="@+id/daysAre"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/days_format"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_alignTop="@+id/minuteIs"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/minuteIs" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>