<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|top"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


                <ImageView
                    android:id="@+id/hourIs"
                    android:layout_width="145dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/days_format"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/daysAre"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/days_format"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/hourIs" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/daysAre"
                android:layout_alignBottom="@id/daysAre"
                android:layout_alignLeft="@id/daysAre"
                android:layout_alignRight="@id/daysAre"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="M"
                    android:layout_weight="1"
                    android:id="@+id/mTxtV"
                    android:layout_marginStart="10dp"

                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    android:text="T"
                    android:id="@+id/tTxtV"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/mTxtV"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="W"
                    android:id="@+id/wTxtV"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tTxtV"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Th"
                    android:id="@+id/thTxtV"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:layout_toEndOf="@+id/wTxtV"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="F"
                    android:id="@+id/fTxtV"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:layout_toEndOf="@+id/thTxtV"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="S"
                    android:id="@+id/sTxtV"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:layout_toEndOf="@+id/fTxtV"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Su"
                    android:id="@+id/suTxtV"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:layout_toEndOf="@+id/sTxtV"
                    />


            </LinearLayout>









        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>